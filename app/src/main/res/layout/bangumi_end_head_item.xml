<?xml version="1.0" encoding="utf-8"?>
<com.lh.imbilibili.widget.ForegroundLinearLayout
    android:id="@+id/head"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:foreground="?selectableItemBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_half_spacing"
        android:drawableLeft="@drawable/ic_wanjie"
        android:drawablePadding="@dimen/item_half_spacing"
        android:gravity="center"
        android:text="完结动画"
        android:textAppearance="@style/TextAppearance.App.Title"/>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_black_alpha_round_rect"
        android:padding="2dp"
        android:text="进去看看"
        android:textAppearance="@style/TextAppearance.App.Subtitle"
        android:textColor="@color/white"/>

</com.lh.imbilibili.widget.ForegroundLinearLayout>