<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.lh.imbilibili.widget.CardFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:background="@drawable/bili_default_card_background"
        android:clickable="true"
        android:elevation="1dp"
        android:foreground="?selectableItemBackgroundBorderless"
        android:paddingBottom="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.lh.imbilibili.widget.ScalableImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:aspectRadioHeight="300"
                app:aspectRadioWidth="480"
                android:scaleType="fitXY"
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cover"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.App.Subtitle"
                android:textColor="?android:textColorPrimary"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAppearance="@style/TextAppearance.App.Subtitle"
                android:textColor="@color/pink"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/title"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAppearance="@style/TextAppearance.App.Subtitle"
                android:textColor="@color/gray_dark"/>
        </RelativeLayout>

    </com.lh.imbilibili.widget.CardFrameLayout>

    <TextView
        android:elevation="1dp"
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_bangumi_badge"
        android:gravity="center"
        android:padding="3dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.App.Body"
        android:textColor="@color/white"/>

</FrameLayout>